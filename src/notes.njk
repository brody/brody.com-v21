---
layout: base.njk
title: Notes

pagination:
  data: collections.notes
  size: 20
  reverse: true 
---

<main class="">
    <div class="container">
        <h1 class="title">{{ title }}</h1>
        <h3 class="subtitle">Personal notes and snippets of code.</h3>

        <ul>
            {% set items = pagination.items %}

            {% for entry in items %}
                <li class="mb-3 lg:mb-0">
                    <a class=" py-1 lg:flex items-center justify-between no-underline" href="{{ entry.url }}">
                        <span class="text-textContrast underline">{{ entry.data.title }}</span>
                        <time data-date="{{ entry.date }}" datetime="{{ entry.date | htmlDateString }}" class="post-date block text-textSubtle text-14 mt-1 lg:mt-0">{{ entry.date | prettyDate }}</time>
                    </a>
                    {{ entry.content }}
                </li>
            {% endfor %}
        </ul>
    </div>
</main>